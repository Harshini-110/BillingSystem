CREATE TABLE BILL_TABLE (
    BILLID       VARCHAR2(12 BYTE)  PRIMARY KEY,
    CUSTOMERNAME VARCHAR2(50 BYTE)  NOT NULL,
    PRODUCTNAME  VARCHAR2(50 BYTE)  NOT NULL,
    BILL_DATE    DATE               NOT NULL,
    QUANTITY     NUMBER,
    PRICE        NUMBER,
    TOTALAMOUNT  NUMBER,
    REMARKS      VARCHAR2(100 BYTE)
);

CREATE SEQUENCE BILL_SEQC
  START WITH 10
  INCREMENT BY 1
  MAXVALUE 99
  NOCACHE
  NOCYCLE;
